{
  "name": "pull-request-convention",
  "version": "3.0.0",
  "author": "Anantachai Saothong <thisismanta@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testMatch **/*.test.mjs",
    "build": "esbuild main/index.mjs --bundle --outfile=dist/index.js --platform=node --target=node12 --minify",
    "preversion": "npm run build && git add dist/*",
    "postversion": "git push --tags origin master"
  },
  "devDependencies": {
    "esbuild": "^0.12.20",
    "jest": "^29.3.1"
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "lodash": "^4.17.21"
  }
}
