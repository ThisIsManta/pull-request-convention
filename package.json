{
  "name": "pull-request-convention",
  "version": "3.1.2",
  "author": "Anantachai Saothong <thisismanta@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testMatch **/*.test.mjs",
    "build": "esbuild main/index.mjs --bundle --outfile=dist/index.js --platform=node --target=node16 --minify",
    "preversion": "npm test && npm run build && git add dist/*",
    "postversion": "git push --tags origin master"
  },
  "devDependencies": {
    "esbuild": "^0.17.8",
    "jest": "^29.4.3"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "lodash": "^4.17.21"
  }
}
